import time
import paho.mqtt.client as paho
import random

broker = "broker.hivemq.com"

client = paho.Client("client-isu-007")

print("connecting to broker ", broker)
client.connect(broker)
client.loop_start()
print("Publishing")

for _ in range(10):
    state = str(input())
    print(f"state is {state}")
    client.publish("house808/bulb1", state)

client.disconnect()
client.loop_stop()
